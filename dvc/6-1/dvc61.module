/**
 * Implements hook_views_api().
 */
function dvc61_views_api() {
  vat_trace_funct();

  return array('api' => '3.0');
}


/**
 * Implements hook_views_default_views().
 */
function dvc61_views_default_views() {
  vat_trace_funct();

  $views = array();
  $views['nodes'] = dvc61_views_nodes_view();

  return $views;
}


